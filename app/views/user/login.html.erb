<%= form_for("login_attempt", :html => {:class => "form-signin"}) do |f| %>
<h2 class="form-signin-heading">Please sign in</h2>
<%= f.text_field(:name, class: "input-block-level", placeholder: "Username") %>
<%= f.password_field(:password, class: "input-block-level", placeholder: "Password") %>
<%= f.submit("Sign in", class: "btn btn-large btn-primary btn-block") %>
<% end %>
